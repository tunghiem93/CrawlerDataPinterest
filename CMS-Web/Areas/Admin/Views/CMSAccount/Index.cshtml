    <script src="@Url.Content("~/Libraries/plugins/jquery-slimscroll/jquery.slimscroll.min.js")"></script>
    <script src="@Url.Content("~/Libraries/plugins/jquery.blockui.min.js")"></script>
    <script src="@Url.Content("~/Libraries/plugins/uniform/jquery.uniform.min.js")"></script>
    <script src="@Url.Content("~/Libraries/plugins/bootstrap-switch/js/bootstrap-switch.min.js")"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
