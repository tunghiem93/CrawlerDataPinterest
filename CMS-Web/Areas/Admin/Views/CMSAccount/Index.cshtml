    <script src="@Url.Content("~/Libraries/scripts/app.min.js")"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="@Url.Content("~/Libraries/pages/scripts/login.min.js")"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
