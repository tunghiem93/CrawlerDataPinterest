@model CMS_DTO.CMSKeyword.CMS_KeywordModels
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{ 
    ViewBag.Title = "Sản phẩm - Danh sách";
}

<div role="main">
    <div class="se-pre-con" style="display: none;"></div>
    <div class="page-title">
        <!-- BEGIN PAGE BAR -->
        @Html.Partial("_breadcrumb", new Dictionary<string, string> { { "A", "Trang chủ" }, { "B", "Danh sách - Keywords" } })
        <!-- END PAGE BAR -->
    </div>
    <div class="page-main">
        <div class="page-main">
            @using (Html.BeginForm("LoadGrid", "CMSKeywords", FormMethod.Post, new { @class = "form-horizontal search-form" }))
            {
                <div class="row" style="margin-bottom:15px;">
                    <div class="form-group">
                        <div class="control-label col-md-1 col-sm-1 col-xs-12 lineHeight"></div>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <div class="input-prepend input-group">
                                <span class="add-on input-group-addon"><i class="glyphicon fa fa-search"></i></span>
                                <input type="text" name="KeySearch" value="@Model.KeySearch" class="form-control" id="idStrSerch" placeholder="Add keywords..." />
                            </div>
                            @*<label class="label label-danger" style='@string.Format("display:{0}", (user.DuplicateKeyword.Length > 0) ? "block":"none")'>Duplicate Keyword. Please enter again!</label>*@
                        </div>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-plus">&nbsp;Add</i></button>
                        </div>
                    </div>
                </div>
            }
            <div class="gridview" style="height:100%;"></div>
        </div>
    </div>
    <div class="detail-view" style="height:100%;">
        <!-- detail partial view -->
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        LoadGrid();
    });

    $(".search-form").submit(function (e) {
        var key = $("#idStrSerch").val();
        if (key !== "")
            LoadGrid();        
        return false;
    });

    function CrawlerKeyword(Id, key) {
        $.ajax(
        {
            url: '@Url.Action("CrawlerKeyword", "CMSKeywords")',
            type: 'get',
            data: {
                ID: Id,
                Key: key,
            },
            dataType: 'html',
            success: function (data) {
                location.reload();
            },
            beforeSend: function () {
                $('.se-pre-con').show();
            },
            complete: function () {
                $('.se-pre-con').hide();
            },
            error: function (e) {
                if (e.status == 400) {
                    $(".detail-error").text("không thể xóa Key này!");
                }
                $('.se-pre-con').hide();
            }
        });
    }

    function Delete(btn, id) {
        $.ajax(
        {
            url: '@Url.Action("Delete", "CMSKeywords")',
            type: 'get',
            data: {
                ID: id,
            },
            dataType: 'html',
            success: function (data) {
                location.reload();
            },
            beforeSend: function () {
                $('.se-pre-con').show();
            },
            complete: function () {
                $('.se-pre-con').hide();
            },
            error: function (e) {
                if (e.status == 400) {
                    $(".detail-error").text("không thể xóa Key này!");
                }
                $('.se-pre-con').hide();
            }
        });
    }

    function DeleteAll(btn, id) {
        $.ajax(
        {
            url: '@Url.Action("DeleteAll", "CMSKeywords")',
            type: 'get',
            data: {
                ID: id,
            },
            dataType: 'html',
            success: function (data) {
                location.reload();
            },
            beforeSend: function () {
                $('.se-pre-con').show();
            },
            complete: function () {
                $('.se-pre-con').hide();
            },
            error: function (e) {
                if (e.status == 400) {
                    $(".detail-error").text("không thể xóa Key này!");
                }
                $('.se-pre-con').hide();
            }
        });
    }

</script>