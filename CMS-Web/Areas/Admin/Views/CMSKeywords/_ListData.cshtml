@{
    Layout = null;
    var IsAdmin = @ViewBag.IsAdmin;
}

@model List<CMS_DTO.CMSKeyword.CMS_KeywordModels>
<div class="table-responsive">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>All Keywords
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_3">
                    <thead style="display: none !important; "></thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td class="text-left">
                                        <a class="btn btn-link" href="@Url.Action("Index", "CMSProducts", new { Key = item.KeySearch})"><b style="font-size: 15px !important; ">@Html.Raw("[" + item.Sequence + "]" + " " + '"' + item.KeySearch + "..." + '"')</b></a>
                                    </td>
                                    <td><a class="btn btn-link" href="javascript:void(0)"><b style="color: #000 !important; ">@Html.Raw("Last crawler: " + "Total post got:")</b></a><a class="btn btn-link" style="    background-color: #007bff !important; color: #fff !important; ">@item.Quantity</a></td>
                                    <td class="text-right">
                                        <a class="btn btn-sm btn-default" style="color: #17a2b8 !important; border-color: #17a2b8 !important; " onclick="CrawlerKeyword('@item.Id', '@item.KeySearch'); return false;">@Html.Raw("Crawler now")</a>
                                        <a class="btn btn-sm btn-default" style="color: #fff !important; background-color: #6c757d !important; border-color: #6c757d !important; " onclick="Delete('@item.Id', '@item.KeySearch'); return false;">@Html.Raw("Delete")</a>
                                        <a class="btn btn-sm btn-danger" onclick="DeleteAll(this, '@item.Id'); return false;">@Html.Raw("Delete and clear posts")</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

