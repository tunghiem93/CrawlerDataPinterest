@model CMS_DTO.CMSEmployee.CMS_EmployeeModels
@using CMS_Shared
<div role="main" style="display:inline-block;height:100%;width:100%">
    @*<div class="se-pre-con" style="display: none;"></div>*@
    <div class="page-title">
        <!-- BEGIN PAGE BAR -->
        @Html.Partial("_breadcrumb", new Dictionary<string, string> { { "A", "Home page" }, { "B", "Employee" } })
        <!-- END PAGE BAR -->
    </div>
    <div class="page-main">
            <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
                <div class="x_content">
                    <div class="row text-right">
                        <ul class="header-buttons pull-right list-inline">
                            <li>
                                <a href="javascript:void(0)" class="btn btn-danger" id="btn-delete" onclick="CloseDetail()">
                                    <i class="fa fa-times"></i>
                                    &nbsp;Cancel
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="box-body" style="display: block;">
                        <div class="row form-horizontal form-label-left" style="margin-bottom:15px;">
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Image </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                                    {
                                        <img id="upload-preview" src="@Model.ImageURL" style="width: 25%; " />
                                    }
                                    else
                                    {
                                        <img id="upload-preview" class="" src="@Commons.Image200_100" style="width: 25%; " />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Name</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label style="margin-top:1%">@Model.FullName</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Email</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label style="margin-top:1%">@Model.Employee_Email</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Phone</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label style="margin-top:1%">@Model.Employee_Phone</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">DOB</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label style="margin-top:1%">@Model.BirthDate</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Address</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label style="margin-top:1%">@Model.Employee_Address</label>
                                </div>
                            </div>
                            @*Image*@
                            @*<div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Image</label>
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
                                    <img id="upload-preview" src="@Model.ImageURL" height="100" width="200" class="" />
                                }
                                else
                                {
                                    <img id="upload-preview" class="" src="@Commons.Image200_100" height="100" width="200" />
                                }
                            </div>
                        </div>*@

                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Status</label>
                                <div class="col-md-1 col-sm-1 col-xs-12">
                                    <label style="margin-top:10%">@string.Format("{0}", Model.IsActive ? "Active" : "Inactive")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
    </div>
</div>
