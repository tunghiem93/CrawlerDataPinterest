@model CMS_DTO.CMSCustomer.ClientLoginModel
@{
    Layout = "~/Areas/Clients/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng nhập";
}
<style>
    .main-body {
        height: 450px !important;
    }
</style>

<div class="wrapper">
    <div class="">
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-9">
                    <div class="login-content clearfix">
                        <h1 class="page-heading"><span>Đăng nhập hệ thống</span></h1>
                        <div class="col-md-6 col-md-offset-3 col-xs-12 col-sm-12 col-xs-offset-0 col-sm-offset-0">
                            @using (@Html.BeginForm("SignIn", "Login", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data", @style = "" }))
                            {
                                <div class="form-group">
                                    <label for="Email" class="col-sm-4 control-label">Email</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "Email", @placeholder = "Tên đăng nhập", @type = "email", })
                                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "label label-danger", })
                                    </div>
                                </div>
                                    <div class="form-group">
                                        <label for="Password" class="col-sm-4 control-label">Mật khẩu</label>
                                        <div class="col-sm-8">
                                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "Password", @placeholder = "Mật khẩu", })
                                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger", })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                                            <a href="#">Quên mật khẩu?</a>
                                        </div>

                                    </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(".vertical-menu-content").addClass("no-home");
        $(document).ready(function () {
        });
    </script>
</div>
<script type="text/javascript">
    $(".header-content").css({ "background": '' });
    $("html").addClass('');
</script>


