@{
    Layout = "~/Areas/Clients/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Giới thiệu";
}
@using CMS_Shared;
<style>
    .contentabct {
        min-height: 300px;
        padding-top: 30px;
    }
</style>

<!DOCTYPE html>
<html>
<body>
    <div class="form-group contentabct">
        <div class="container">
            <div class="" style="padding: 13px 0px; ">
                <h2>@Commons.CompanyTitle</h2><br />
                <div class="">
                    <strong>Địa chỉ: </strong><span>@Commons.AddressCompany</span>
                </div><br />

                <div class="">
                    <strong>Điện thoại: </strong><span>KD1: @Commons.Phone1 || KD2: @Commons.Phone2</span>
                </div><br />

                <div class="">
                    <strong>Email: </strong><span>@Commons.Email2 || @Commons.Email1</span>
                </div><br />
            </div>

        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        $('.menu-product li.child .open-close').on('click', function () {
            $(this).removeAttr('href');
            var element = $(this).parent('li');
            if (element.hasClass('open')) {
                element.removeClass('open');
                element.children('ul').slideUp();
            }
            else {
                element.addClass('open');
                element.children('ul').slideDown();
            }
        });
        $(".vertical-menu-content").addClass("no-home");
    })
</script>
